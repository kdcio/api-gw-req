{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [
    "node_modules",
    "coverage",
    "jest.config.js",
    "tests",
    "dist",
    "typings",
    "rollup.config.js"
  ]
}
